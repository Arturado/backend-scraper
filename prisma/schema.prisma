generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id            String   @id @default(uuid())
  title         String
  company       String
  location      String?
  country       String?
  remoteType    RemoteType
  seniority     Seniority?
  salaryMin     Int?
  salaryMax     Int?
  currency      String?
  source        String
  sourceId      String?
  url           String   @unique
  description   String?
  createdAt     DateTime @default(now())
  publishedAt   DateTime?

  // Relaci√≥n many-to-many con StackTag
  stacks        StackTag[]
}

model StackTag {
  id    String @id @default(uuid())
  name  String @unique
  jobs  Job[]
}

enum RemoteType {
  REMOTE
  HYBRID
  ONSITE
}

enum Seniority {
  JUNIOR
  SEMI
  SENIOR
  LEAD
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
}

